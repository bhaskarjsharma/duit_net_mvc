@model IEnumerable<duit_net_mvc.Models.Advertisement>
@{
    ViewData["Title"] = "CurrentOpenings";
}

<h1>Current Openings</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Apply
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AdvertisementId
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Apply","Home",new { id = item.AdvertisementId})">Apply</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>

    



